{
  "neo-tree": {
    "filesystem": {
      "filtered_items": {
        "visible": false,
        "hide_dotfiles": true,
        "hide_gitignored": true,
        "hide_by_name": [
          "node_modules",
          ".git",
          "venv",
          "__pycache__",
          ".DS_Store",
          ".cache"
        ],
        "hide_by_pattern": [
          "*/zen/*",
          "*/dist/*",
          "*/target/*"
        ]
      }
    }
  }
}
