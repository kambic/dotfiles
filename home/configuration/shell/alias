alias gn="(cd $NOTES_DIR && lazygit)"           # switch to notes directory and open git TUI

## kitty
alias icat="kitty +kitten icat --align=left"
alias s="kitty +kitten ssht"
alias nvim-gui="kitty nvim"

## application shortcuts
alias nv="nvim"

alias rmrf="rm -rf"

alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

alias ls="eza -l --icons --git"
alias l="eza -a --long --header --icons"
alias ll="eza -a --long --header --icons --git"
