
/*
## How to Install the Zed Theme

1. Copy this template to your wallust templates folder:

2. Add this section to your wallust.toml file:
    ```
      [templates.zed_theme]
      template = "zed.json"
      target = "~/.config/zed/themes/wallust.json"
    ```

3. Generate the theme: Run wallust to generate the theme from your current wallpaper:
   ```bash
     wallust run /path/to/your/wallpaper.jpg
   ```

4. Select the theme in Zed:
   - Press `Cmd+Shift+P` (macOS) or `Ctrl+Shift+P` (Linux) to open the command palette
   - Type "theme selector" and select it
   - Choose "Wallust" from the theme list
*/
{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#18181D",
                "text": "#F7F9FF",
                "text.muted": "#C6C7CC",
                "text.placeholder": "#ADAEB2",
                "text.disabled": "#949599",
                "text.accent": "#A99B84",

                // Icon colors - match text hierarchy
                "icon": "#F7F9FF",
                "icon.muted": "#C6C7CC",
                "icon.disabled": "#949599",
                "icon.placeholder": "#ADAEB2",
                "icon.accent": "#A99B84",

                // Border colors - subtle but visible
                "border": "#636466",
                "border.variant": "#4A4B4C",
                "border.focused": "#A99B84",
                "border.selected": "#A99B84",
                "border.transparent": "#00000000",
                "border.disabled": "#313233",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#18181D",
                "elevated_surface.background": "#2F2F34",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#363739",
                "element.active": "#3A3630",
                "element.selected": "#302D28",
                "element.disabled": "#242428",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1B1B1C",
                "ghost_element.active": "#363739",
                "ghost_element.selected": "#1D1B18",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#433F38",

                // Application frame elements
                "status_bar.background": "#242428",
                "title_bar.background": "#18181D",
                "title_bar.inactive_background": "#1F1F24",
                "toolbar.background": "#18181D",

                // Side panels
                "panel.background": "#18181D",
                "panel.focused_border": "#A99B84",

                // Editor panes
                "pane.focused_border": "#A99B84",
                "pane_group.border": "#636466",

                // Tab bar and tabs
                "tab_bar.background": "#242428",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#18181D",

                // Main editor area
                "editor.background": "#18181D",
                "editor.foreground": "#F7F9FF",
                "editor.gutter.background": "#18181D",
                "editor.subheader.background": "#242428",
                "editor.active_line.background": "#1B1B1C",
                "editor.highlighted_line.background": "#1D222A",
                "editor.line_number": "#949599",
                "editor.active_line_number": "#F7F9FF",
                "editor.invisible": "#7C7D80",
                "editor.wrap_guide": "#636466",
                "editor.active_wrap_guide": "#949599",
                "editor.indent_guide": "#636466",
                "editor.indent_guide_active": "#949599",
                "editor.document_highlight.read_background": "#242A35",
                "editor.document_highlight.write_background": "#1C1A19",
                "editor.document_highlight.bracket_background": "#302D28",

                // Integrated terminal
                "terminal.background": "#18181D",
                "terminal.foreground": "#F7F9FF",
                "terminal.bright_foreground": "#F8FAFF",
                "terminal.dim_foreground": "#C6C7CC",
                "terminal.ansi.background": "#18181D",
                "terminal.ansi.black": "#3E3F45",
                "terminal.ansi.red": "#585044",
                "terminal.ansi.green": "#BA3514",
                "terminal.ansi.yellow": "#7A91B5",
                "terminal.ansi.blue": "#A99B84",
                "terminal.ansi.magenta": "#FFDF57",
                "terminal.ansi.cyan": "#E9EFFE",
                "terminal.ansi.white": "#ECEFF6",
                "terminal.ansi.bright_black": "#A5A7AC",
                "terminal.ansi.bright_red": "#585044",
                "terminal.ansi.bright_green": "#BA3514",
                "terminal.ansi.bright_yellow": "#7A91B5",
                "terminal.ansi.bright_blue": "#A99B84",
                "terminal.ansi.bright_magenta": "#FFDF57",
                "terminal.ansi.bright_cyan": "#E9EFFE",
                "terminal.ansi.bright_white": "#ECEFF6",

                // Search functionality
                "search.match_background": "#3A4354",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7C7D80",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#ADAEB2",

                // Status indicators - success, warning, error, info
                "success": "#BA3514",
                "success.background": "#35140D",
                "success.border": "#BA3514",

                "warning": "#7A91B5",
                "warning.background": "#242A35",
                "warning.border": "#7A91B5",

                "error": "#585044",
                "error.background": "#1C1A19",
                "error.border": "#585044",

                "info": "#A99B84",
                "info.background": "#302D28",
                "info.border": "#A99B84",

                "hint": "#C6C7CC",
