
/*
## How to Install the Zed Theme

1. Copy this template to your wallust templates folder:

2. Add this section to your wallust.toml file:
    ```
      [templates.zed_theme]
      template = "zed.json"
      target = "~/.config/zed/themes/wallust.json"
    ```

3. Generate the theme: Run wallust to generate the theme from your current wallpaper:
   ```bash
     wallust run /path/to/your/wallpaper.jpg
   ```

4. Select the theme in Zed:
   - Press `Cmd+Shift+P` (macOS) or `Ctrl+Shift+P` (Linux) to open the command palette
   - Type "theme selector" and select it
   - Choose "Wallust" from the theme list
*/
{
    "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
    "author": "Jan Reinsch <jan@coded-aesthetics.com>",
    "name": "Wallust",
    "themes": [
        {
            "name": "Wallust",
            "appearance": "dark",
            "style": {
                // Basic text and background colors
                "background": "#252528",
                "text": "#F3ECEA",
                "text.muted": "#C2BDBB",
                "text.placeholder": "#AAA5A4",
                "text.disabled": "#928E8C",
                "text.accent": "#8796B5",

                // Icon colors - match text hierarchy
                "icon": "#F3ECEA",
                "icon.muted": "#C2BDBB",
                "icon.disabled": "#928E8C",
                "icon.placeholder": "#AAA5A4",
                "icon.accent": "#8796B5",

                // Border colors - subtle but visible
                "border": "#615E5E",
                "border.variant": "#494746",
                "border.focused": "#8796B5",
                "border.selected": "#8796B5",
                "border.transparent": "#00000000",
                "border.disabled": "#312F2F",

                // Surface backgrounds - slightly elevated from main background
                "surface.background": "#252528",
                "elevated_surface.background": "#3B3B3E",

                // Interactive element states
                "element.background": "transparent",
                "element.hover": "#383737",
                "element.active": "#343842",
                "element.selected": "#2B2F37",
                "element.disabled": "#303033",

                // Ghost elements - more subtle interactions
                "ghost_element.background": "transparent",
                "ghost_element.hover": "#1C1B1B",
                "ghost_element.active": "#383737",
                "ghost_element.selected": "#1A1C21",
                "ghost_element.disabled": "transparent",

                // Drag and drop target
                "drop_target.background": "#3C424D",

                // Application frame elements
                "status_bar.background": "#303033",
                "title_bar.background": "#252528",
                "title_bar.inactive_background": "#2C2C2E",
                "toolbar.background": "#252528",

                // Side panels
                "panel.background": "#252528",
                "panel.focused_border": "#8796B5",

                // Editor panes
                "pane.focused_border": "#8796B5",
                "pane_group.border": "#615E5E",

                // Tab bar and tabs
                "tab_bar.background": "#303033",
                "tab.inactive_background": "transparent",
                "tab.active_background": "#252528",

                // Main editor area
                "editor.background": "#252528",
                "editor.foreground": "#F3ECEA",
                "editor.gutter.background": "#252528",
                "editor.subheader.background": "#303033",
                "editor.active_line.background": "#1C1B1B",
                "editor.highlighted_line.background": "#251E1F",
                "editor.line_number": "#928E8C",
                "editor.active_line_number": "#F3ECEA",
                "editor.invisible": "#7A7675",
                "editor.wrap_guide": "#615E5E",
                "editor.active_wrap_guide": "#928E8C",
                "editor.indent_guide": "#615E5E",
                "editor.indent_guide_active": "#928E8C",
                "editor.document_highlight.read_background": "#2E2627",
                "editor.document_highlight.write_background": "#121218",
                "editor.document_highlight.bracket_background": "#2B2F37",

                // Integrated terminal
                "terminal.background": "#252528",
                "terminal.foreground": "#F3ECEA",
                "terminal.bright_foreground": "#F4EEEC",
                "terminal.dim_foreground": "#C2BDBB",
                "terminal.ansi.background": "#252528",
                "terminal.ansi.black": "#4B4A4E",
                "terminal.ansi.red": "#242336",
                "terminal.ansi.green": "#536083",
                "terminal.ansi.yellow": "#937173",
                "terminal.ansi.blue": "#8796B5",
                "terminal.ansi.magenta": "#D7A0D2",
                "terminal.ansi.cyan": "#DCC9C4",
                "terminal.ansi.white": "#E5DCD9",
                "terminal.ansi.bright_black": "#A09A98",
                "terminal.ansi.bright_red": "#242336",
                "terminal.ansi.bright_green": "#536083",
                "terminal.ansi.bright_yellow": "#937173",
                "terminal.ansi.bright_blue": "#8796B5",
                "terminal.ansi.bright_magenta": "#D7A0D2",
                "terminal.ansi.bright_cyan": "#DCC9C4",
                "terminal.ansi.bright_white": "#E5DCD9",

                // Search functionality
                "search.match_background": "#4A3C3E",

                // Scrollbar elements
                "scrollbar.track.background": "transparent",
                "scrollbar.track.border": "transparent",
                "scrollbar.thumb.background": "#7A7675",
                "scrollbar.thumb.border": "transparent",
                "scrollbar.thumb.hover_background": "#AAA5A4",

