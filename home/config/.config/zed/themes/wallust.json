                "created.background": "#1E212B",
                "created.border": "#536083",

                "modified": "#937173",
                "modified.background": "#2E2627",
                "modified.border": "#937173",

                "deleted": "#242336",
                "deleted.background": "#121218",
                "deleted.border": "#242336",

                "renamed": "#8796B5",
                "renamed.background": "#2B2F37",
                "renamed.border": "#8796B5",

                "conflict": "#D7A0D2",
                "conflict.background": "#3F313F",
                "conflict.border": "#D7A0D2",

                "ignored": "#AAA5A4",
                "ignored.background": "#1C1B1B",
                "ignored.border": "#AAA5A4",

                "hidden": "#928E8C",
