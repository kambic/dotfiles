                    },
                    "string.escape": {
                        "color": "#E9EFFE"
                    },
                    "string.regex": {
                        "color": "#E9EFFE"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#7A91B5"
                    },
                    "constant": {
                        "color": "#7A91B5"
                    },
                    "boolean": {
                        "color": "#FFDF57"
                    },

                    // Functions
                    "function": {
                        "color": "#A99B84"
                    },
                    "constructor": {
                        "color": "#A99B84"
                    },

                    // Types
                    "type": {
                        "color": "#FFDF57"
                    },
                    "enum": {
                        "color": "#FFDF57"
                    },

                    // Variables
                    "variable": {
                        "color": "#F7F9FF"
                    },
                    "variable.special": {
                        "color": "#FFDF57"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#A99B84"
                    },
                    "attribute": {
                        "color": "#7A91B5"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#E9EFFE"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DEE0E6"
                    },
                    "punctuation.bracket": {
                        "color": "#F7F9FF"
                    },
                    "punctuation.delimiter": {
                        "color": "#DEE0E6"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#585044"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#A99B84"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#BA3514"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#A99B84",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#A99B84",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#E9EFFE"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F7F9FF"
                    },
                    "preproc": {
                        "color": "#585044"
                    },
                    "primary": {
                        "color": "#F7F9FF"
                    },
                    "variant": {
                        "color": "#FFDF57"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C6C7CC",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#ADAEB2",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#A99B84",
                        "background": "#A99B84",
                        "selection": "#433F38"
                    },
                    {
                        "cursor": "#BA3514",
                        "background": "#BA3514",
                        "selection": "#4A1B12"
                    },
                    {
                        "cursor": "#7A91B5",
