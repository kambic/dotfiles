                    },
                    "string.escape": {
                        "color": "#DCC9C4"
                    },
                    "string.regex": {
                        "color": "#DCC9C4"
                    },

                    // Numbers and constants
                    "number": {
                        "color": "#937173"
                    },
                    "constant": {
                        "color": "#937173"
                    },
                    "boolean": {
                        "color": "#D7A0D2"
                    },

                    // Functions
                    "function": {
                        "color": "#8796B5"
                    },
                    "constructor": {
                        "color": "#8796B5"
                    },

                    // Types
                    "type": {
                        "color": "#D7A0D2"
                    },
                    "enum": {
                        "color": "#D7A0D2"
                    },

                    // Variables
                    "variable": {
                        "color": "#F3ECEA"
                    },
                    "variable.special": {
                        "color": "#D7A0D2"
                    },

                    // Properties and attributes
                    "property": {
                        "color": "#8796B5"
                    },
                    "attribute": {
                        "color": "#937173"
                    },

                    // Operators - typically cyan (color6)
                    "operator": {
                        "color": "#DCC9C4"
                    },

                    // Punctuation - subtle but visible
                    "punctuation": {
                        "color": "#DBD4D3"
                    },
                    "punctuation.bracket": {
                        "color": "#F3ECEA"
                    },
                    "punctuation.delimiter": {
                        "color": "#DBD4D3"
                    },

                    // Tags (HTML/XML)
                    "tag": {
                        "color": "#242336"
                    },

                    // Labels and identifiers
                    "label": {
                        "color": "#8796B5"
                    },

                    // Text literals
                    "text.literal": {
                        "color": "#536083"
                    },

                    // Titles and headings
                    "title": {
                        "color": "#8796B5",
                        "font_weight": 700
                    },

                    // Links in markdown/docs
                    "link_text": {
                        "color": "#8796B5",
                        "font_style": "italic"
                    },
                    "link_uri": {
                        "color": "#DCC9C4"
                    },

                    // Text emphasis
                    "emphasis": {
                        "font_style": "italic"
                    },
                    "emphasis.strong": {
                        "font_weight": 700
                    },

                    // Special syntax elements
                    "embedded": {
                        "color": "#F3ECEA"
                    },
                    "preproc": {
                        "color": "#242336"
                    },
                    "primary": {
                        "color": "#F3ECEA"
                    },
                    "variant": {
                        "color": "#D7A0D2"
                    },

                    // Editor hints and diagnostics
                    "hint": {
                        "color": "#C2BDBB",
                        "font_weight": 700
                    },
                    "predictive": {
                        "color": "#AAA5A4",
                        "font_style": "italic"
                    }
                },

                // Collaborative editing - different users get different colors
                "players": [
                    {
                        "cursor": "#8796B5",
                        "background": "#8796B5",
                        "selection": "#3C424D"
                    },
                    {
                        "cursor": "#536083",
                        "background": "#536083",
