                "predictive.background": "#1C1B1B",
                "predictive.border": "#AAA5A4",

                "unreachable": "#7A7675",
                "unreachable.background": "#2C2C2E",
                "unreachable.border": "#7A7675",

                // Link styling
                "link_text.hover": "#93A1BC",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C2BDBB",
