                "created.background": "#35140D",
                "created.border": "#BA3514",

                "modified": "#7A91B5",
                "modified.background": "#242A35",
                "modified.border": "#7A91B5",

                "deleted": "#585044",
                "deleted.background": "#1C1A19",
                "deleted.border": "#585044",

                "renamed": "#A99B84",
                "renamed.background": "#302D28",
                "renamed.border": "#A99B84",

                "conflict": "#FFDF57",
                "conflict.background": "#463E1D",
                "conflict.border": "#FFDF57",

                "ignored": "#ADAEB2",
                "ignored.background": "#1B1B1C",
                "ignored.border": "#ADAEB2",

                "hidden": "#949599",
                "hidden.background": "transparent",
                "hidden.border": "#949599",

                "predictive": "#ADAEB2",
                "predictive.background": "#1B1B1C",
                "predictive.border": "#ADAEB2",

                "unreachable": "#7C7D80",
                "unreachable.background": "#1F1F24",
                "unreachable.border": "#7C7D80",

                // Link styling
                "link_text.hover": "#B2A590",

                // Syntax highlighting - follows standard color assignments
                "syntax": {
                    // Comments - muted but readable
                    "comment": {
                        "color": "#C6C7CC",
                        "font_style": "italic"
                    },
                    "comment.doc": {
                        "color": "#DEE0E6",
                        "font_style": "italic"
                    },

                    // Keywords
                    "keyword": {
