{
    // global AI Killswitch
    "agent_buffer_font_size": 14.0,
    "agent_ui_font_size": 14.0,
    "buffer_font_weight": 500.0,
    "ui_font_weight": 600.0,
    "icon_theme": "Material Icon Theme",
    "disable_ai": false,

    "colorize_brackets": true,
    "ssh_connections": [
        {
            "host": "cobra.lan",
            "username": "root",
            "args": [],
            "projects": [
                {
                    "paths": [
                        "/etc/config"
                    ]
                }
            ]
        },
        {
            "host": "z4g4.lan",
            "args": [],
            "projects": []
        },
        {
            "host": "z4g4",
            "args": [],
            "projects": []
        },
        {
            "host": "z4g4",
            "args": [],
            "projects": []
        }
    ],
    "features": {
        "edit_prediction_provider": "zed",
    },

    "agent": {
        "default_profile": "write",
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4.1",
        },
    },

    "agent_servers": {
        "gemini": {
            "ignore_system_version": false,
        },
    },

    "show_edit_predictions": true,
    "ui_font_size": 16.0,
    "ui_font_family": "JetBrainsMono Nerd Font",
    "buffer_font_size": 14.0,
    "buffer_font_family": "JetBrainsMono Nerd Font",

    // Vim mode settings
    "vim_mode": false,
    "relative_line_numbers": "enabled",

    "soft_wrap": "prefer_line",
    "tab_size": 4,

    // color the indentation levels
    "indent_guides": {
        "enabled": true,
        "coloring": "indent_aware",
    },

    "tabs": {
        "file_icons": true,
        "git_status": true,
    },

    // Disable the collaboration and chat panel
    "collaboration_panel": {
        "button": false,
    },

    "outline_panel": {
        "dock": "right",
    },

    "notification_panel": {
        "dock": "left",
    },

    // Inlay hints preconfigured by Zed
    "inlay_hints": {
        "enabled": true,
        "show_type_hints": true,
        "show_parameter_hints": true,
        "show_other_hints": true,
    },
    // Theming
    "theme": {
        "mode": "dark",
        "light": "One Light",
        "dark": "Wallust",
    },

    // Turn off telemetry
    "telemetry": {
        "diagnostics": false,
        "metrics": false,
    },

    // Language Settings
    "languages": {
        "Markdown": {
            "format_on_save": "on",
            "tab_size": 4,
        },
        "Rust": {
            "formatter": "language_server",
            "format_on_save": "on",
            "tab_size": 4,
        },
        "Python": {
            "formatter": {
                "external": {
                    "command": "black",
                    "arguments": ["-"],
                },
            },
            "format_on_save": "on",
            "tab_size": 2,
        },
    },

    "lsp": {
        "rust-analyzer": {
            "initialization_options": {
                "checkOnSave": {
                    "command": "clippy",
                },
            },
        },
    },

    "file_types": {
        "latex": ["*.cfg", "*.sty"],
        "dotnev": [".env.*"],
        "Hyprlang": ["**/hypr/**"],
    },

    // disable the predictions for certain files
    "edit_predictions": {
        "mode": "subtle",
        "disabled_globs": [
            "**/.env*",
            "**/*.pem",
            "**/*.key",
            "**/*.cert",
            "**/*.crt",
            "**/secrets.yml",
        ],
    },

    // autosave file after 10 second of inactivity
    "autosave": {
        "after_delay": {
            "milliseconds": 10000,
        },
    },

    "scrollbar": {
        "show": "auto",
        "cursors": true,
        "git_diff": true,
        "search_results": true,
        "selected_text": true,
        "selected_symbol": true,
        "diagnostics": "all",
        "axes": {
            "horizontal": true,
            "vertical": true,
        },
    },

    // The key to use for adding multiple cursors
    "multi_cursor_modifier": "alt",

    "sticky_scroll": {
        "enabled": true,
    },

    // Builtin Terminal Settings
    "terminal": {
        "font_weight": 500.0,
        "font_family": "JetBrainsMono Nerd Font",
        "font_size": 14,
        "default_height": 320,
        "copy_on_select": true,
    },
}
